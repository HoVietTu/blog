<% provide(:title, @micropost.user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for current_user %>
        <%= current_user.name %>
      </h1>
    </section>
    <section class="comment_form">
        <%= render 'shared/comment_form' %>
     </section>
    
  </aside>
  <div class="col-md-8">
       <section class="gra">
       <p>
        <%= gravatar_for @micropost.user %>
        <%= @micropost.user.name %>
      </p>
      </section>
      <p>
        <%= @micropost.title %>
      </p>
      <p>
        <%= @micropost.content %>
      </p>

    <% if @micropost.comments.any? %>
      <h3>Comments (<%= @micropost.comments.count %>)</h3>
      <ol class="microposts">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
  </div>
</div>